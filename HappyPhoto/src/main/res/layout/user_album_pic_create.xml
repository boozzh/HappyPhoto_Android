<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从照片库中选择"
        android:id="@+id/btnSelectPicFromGallery"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="73dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍摄新照片"
        android:id="@+id/btnTakeNewPhoto"
        android:layout_below="@+id/btnSelectPicFromGallery"
        android:layout_alignLeft="@+id/btnSelectPicFromGallery"
        android:layout_alignStart="@+id/btnSelectPicFromGallery"
        android:layout_marginTop="54dp"
        android:layout_alignRight="@+id/btnSelectPicFromGallery"
        android:layout_alignEnd="@+id/btnSelectPicFromGallery" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnTakeNewPhoto"
        android:layout_alignEnd="@+id/btnTakeNewPhoto" />
</RelativeLayout>